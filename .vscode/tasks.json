{
    "version": "2.0.0",
    "command": "haxe",
    "suppressTaskName": true,
    "tasks": [
        {
            "args": [
                "build.hxml",
                "-debug"
            ],
            "taskName": "build (debug)",
            "problemMatcher": "$haxe",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "args": [
                "build.hxml"
            ],
            "taskName": "build (release)",
            "problemMatcher": "$haxe",
            "group": {
                "kind": "test",
                "isDefault": true
            }
        }
    ]
}
